
// новый проба
{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" },
    { "source": "/objects/(.*)", "destination": "/objects/$1" },
    { "source": "/deals/(.*)", "destination": "/deals/$1" },
    { "source": "/meetings/(.*)", "destination": "/meetings/$1" },
    { "source": "/calendar/(.*)", "destination": "/calendar/$1" },
    { "source": "/ridge/(.*)", "destination": "/ridge/$1" }
  ]
}

// рабочий
{
  "version": 2,
  "builds": [
    {
      "src": "./app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "./app.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}

// еще такой с форумов есть
{
  "routes": [{
      "src": "/[^.]+",
      "dest": "/",
      "status": 200
  }]
}